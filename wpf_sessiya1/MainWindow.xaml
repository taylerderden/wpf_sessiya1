<Window x:Class="wpf_sessiya1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_sessiya1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFE0BD7B">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация" FontSize="40" HorizontalAlignment="Center"  Foreground="#FFE64B20" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" MaxWidth="500" Margin="0,100">
            <TextBlock Text="Логин" FontSize="20" HorizontalAlignment="Center" Foreground="#FFE64B20" FontWeight="Bold"/>
            <TextBox Name="tbLogin"/>
            <TextBlock Text="Пароль" FontSize="20" HorizontalAlignment="Center" Foreground="#FFE64B20" FontWeight="Bold"/>
            <TextBox Name="tbPassword"/>

            <Button Content="Войти" FontSize="20" Margin="70,40" Background="#FFE3AD37" Foreground="#FFE64B20" FontWeight="Bold" Click="Authorization_Click"/>
        </StackPanel>

    </Grid>
</Window>
