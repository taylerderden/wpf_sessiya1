<Page x:Class="wpf_sessiya1.Pages.AddServices_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_sessiya1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddServices_Page" IsVisibleChanged="AddServices_IsVisibleChanged" Width="600" Height="374">

    <Grid Background="Ivory" Width="600" Height="347">
        <Button Content="Save" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top" FontSize="20" Width="180" Click="Button_SaveClick"/>

        <Label Content="Title" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.542,0.536" FontSize="20"/>
        <Label Content="Cost" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" FontSize="20"/>

        <TextBox Text="{Binding Title}" HorizontalAlignment="Center" Margin="0,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="546" FontSize="20"/>
        <TextBox Text="{Binding Cost}" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" Width="546" FontSize="20"/>
    </Grid>
</Page>
